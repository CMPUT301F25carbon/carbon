<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Carbon">

        <!-- Launcher -->
        <activity
            android:name=".SplashActivity"
            android:exported="true"
            android:theme="@style/Theme.Carbon">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- App screens (no launcher here) -->
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:theme="@style/Theme.Carbon" />

        <activity
            android:name=".BrowseEventsActivity"
            android:exported="false"
            android:theme="@style/Theme.Carbon" />

        <activity
            android:name=".SignUpActivity"
            android:exported="true"
            android:theme="@style/Theme.Carbon" />

        <activity
            android:name=".LogInActivity"
            android:exported="true"
            android:theme="@style/Theme.Carbon" />

        <activity
            android:name=".GuidelinesActivity"
            android:exported="true"
            android:theme="@style/Theme.Carbon" />

        <activity
            android:name=".CreateEventActivity"
            android:exported="true"
            android:theme="@style/Theme.Carbon" />

        <activity
            android:name=".EventDetailsActivity"
            android:exported="true"
            android:theme="@style/Theme.Carbon" >
            <!-- âœ… ADD THIS INTENT FILTER BLOCK -->
            <intent-filter>
                <!-- This action means the activity can be started by a URL -->
                <action android:name="android.intent.action.VIEW" />
                <!-- This makes it the default app for this type of link -->
                <category android:name="android.intent.category.DEFAULT" />
                <!-- This allows the link to be opened from a web browser or other apps -->
                <category android:name="android.intent.category.BROWSABLE" />

                <!-- Define the link structure we can handle -->
                <data
                    android:host="events"
                    android:scheme="carbondate" />
            </intent-filter>
        </activity>

        <activity
            android:name=".DisplayQRCodeActivity"
            android:exported="true"
            android:theme="@style/Theme.Carbon" />
        <activity
            android:name=".BrowseOrganizerEventsActivity"
            android:exported="true"
            android:theme="@style/Theme.Carbon" />
        <activity android:name=".EventWaitlistActivity"
            android:exported="true"
            android:theme="@style/Theme.Carbon"/>

        <activity
            android:name=".ProfileActivity"
            android:exported="true"
            android:theme="@style/Theme.Carbon" />

        <activity
            android:name=".NotificationActivity"
            android:exported="true"
            android:theme="@style/Theme.Carbon" />

        <activity
            android:name=".SelectedListActivity"
            android:exported="true"
            android:theme="@style/Theme.Carbon" />

        <activity
            android:name=".AllUsersActivity"
            android:exported="true"
            android:theme="@style/Theme.Carbon" />
        <activity android:name=".OrganizerEventDetailsActivity"
            android:exported="true"
            android:theme="@style/Theme.Carbon"/>

        <activity
            android:name=".AcceptedListActivity"
            android:exported="true"
            android:theme="@style/Theme.Carbon" />

        <!-- for exporting csv -->
        <provider
            android:name="androidx.core.content.FileProvider"
            android:authorities="${applicationId}.fileprovider"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/file_paths" />
        </provider>


    </application>

</manifest>
