<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:padding="12dp"
    android:layout_marginVertical="4dp"
    android:background="#F0DAA0"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/notification_icon"
        android:src="@drawable/ic_person"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginEnd="8dp"
        android:contentDescription="Notification Icon" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1">

        <TextView
            android:id="@+id/notification_title"
            android:text="Event Name"
            android:textColor="#8C154F"
            android:fontFamily="@font/italiana"
            android:textStyle="bold"
            android:textSize="16sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/notification_message"
            android:text="You were selected for this event!"
            android:textColor="#8C154F"
            android:fontFamily="@font/italiana"
            android:textSize="14sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:id="@+id/notification_actions"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp">

            <Button
                android:id="@+id/btn_accept_notification"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Accept"
                android:textColor="#FFFFFF"
                android:backgroundTint="#4CAF50"
                android:fontFamily="@font/italiana"
                android:minHeight="0dp"
                android:paddingVertical="8dp"/>

            <View
                android:layout_width="8dp"
                android:layout_height="1dp"/>

            <Button
                android:id="@+id/btn_decline_notification"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Decline"
                android:textColor="#FFFFFF"
                android:backgroundTint="#D32F2F"
                android:fontFamily="@font/italiana"
                android:minHeight="0dp"
                android:paddingVertical="8dp"/>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>
