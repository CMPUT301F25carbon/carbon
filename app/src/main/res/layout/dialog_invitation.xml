<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    android:background="@drawable/rounded_yellow_panel"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:padding="24dp">

    <ImageView
        android:id="@+id/invite_avatar"
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:src="@drawable/ic_person"
        android:layout_marginBottom="12dp"
        android:contentDescription="Avatar" />

    <TextView
        android:id="@+id/invite_event_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Winner!"
        android:textColor="#731B3F"
        android:textSize="20sp"
        android:fontFamily="@font/italiana"
        android:layout_marginBottom="8dp" />

    <TextView
        android:id="@+id/invite_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ðŸŽ‰ Youâ€™re In!\nYouâ€™ve been selected for [Event Name]\nðŸ“… [Date] ðŸ•“ [Time]\nTap Accept to secure your spot!"
        android:gravity="center"
        android:textColor="#731B3F"
        android:textSize="14sp"
        android:fontFamily="@font/italiana"
        android:layout_marginBottom="16dp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <Button
            android:id="@+id/btn_accept"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:text="Accept"
            android:textColor="#FFFFFF"
            android:backgroundTint="#ED9029"
            android:fontFamily="@font/italiana"
            android:layout_marginEnd="8dp" />

        <Button
            android:id="@+id/btn_decline"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:text="Decline"
            android:textColor="#FFFFFF"
            android:backgroundTint="#731B3F"
            android:fontFamily="@font/italiana" />
    </LinearLayout>
</LinearLayout>
