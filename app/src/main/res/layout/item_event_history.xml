<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:padding="12dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#FCD694"
    android:layout_marginBottom="8dp">   <!-- FIXED: was marginBottom -->

    <TextView
        android:id="@+id/historyEventName"
        android:text="Event Name"
        android:textSize="18sp"
        android:textColor="#731B3F"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/historyEventDate"
        android:text="Event Date"
        android:textSize="14sp"
        android:textColor="#510A28"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp" />

    <TextView
        android:id="@+id/historyStatus"
        android:text="Status"
        android:textSize="16sp"
        android:textColor="#510A28"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
</LinearLayout>
