<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ED9029"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:padding="24dp"
        android:fontFamily="@font/italiana">

        <ImageView
            android:id="@+id/shi_logo"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:src="@drawable/carbon_start_logo"
            android:contentDescription="@string/app_name"
            android:layout_gravity="center"
            android:layout_marginTop="48dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/italiana"
            android:text="WELCOME"
            android:textColor="#8C154F"
            android:textSize="48sp"
            android:layout_marginTop="32dp"
            android:layout_marginBottom="64dp"
            android:gravity="center"/>

        <EditText
            android:hint="Email Address"
            android:id="@+id/email"
            android:backgroundTint="#FCD694"
            android:inputType="textEmailAddress"
            android:background="@drawable/rounded_edittext"
            android:layout_marginVertical="8dp"
            android:padding="12dp"
            android:textColor="#731B3F"
            android:textColorHint="#A67852"
            android:layout_width="325dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/italiana"/>

        <EditText
            android:hint="Password"
            android:id="@+id/password"
            android:backgroundTint="#FCD694"
            android:layout_marginVertical="8dp"
            android:inputType="textPassword"
            android:padding="12dp"
            android:textColor="#731B3F"
            android:textColorHint="#A67852"
            android:background="@drawable/rounded_edittext"
            android:layout_width="325dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/italiana"/>

        <!-- LOG IN BUTTON -->
        <Button
            android:text="Log in"
            android:id="@+id/sign_up_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:textColor="#FCD694"
            android:backgroundTint="#8C154F"
            android:fontFamily="@font/italiana"/>

        <TextView
            android:id="@+id/sign_up_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Don't have an account? Sign up here"
            android:textSize="14sp"
            android:textColor="#FFFFFF"
            android:layout_marginTop="24dp"
            android:textAlignment="center"
            android:fontFamily="@font/italiana"/>

        <Button
            android:id="@+id/device_login_btn"
            android:text="Continue with Device ID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:textColor="#FCD694"
            android:backgroundTint="#8C154F"
            android:fontFamily="@font/italiana"/>

    </LinearLayout>
</ScrollView>