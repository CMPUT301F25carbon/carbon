<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/guidelines_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#8C154F">

    <!-- Header -->
    <include
        android:id="@+id/include_header"
        layout="@layout/top_header" />

    <!-- Bottom Menu -->
    <include
        android:id="@+id/include_bottom_menu"
        layout="@layout/bottom_menu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true" />

    <!-- Main Scrollable Area -->
    <LinearLayout
        android:id="@+id/waitlist_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/include_header"
        android:layout_above="@id/include_bottom_menu"
        android:orientation="vertical"
        android:background="@drawable/rounded_panel"
        android:padding="16dp">

        <!-- Scrollable Content -->
        <ScrollView
            android:id="@+id/eventsList_scroll"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:fillViewport="true"
            android:overScrollMode="always"
            android:scrollbars="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center_horizontal">

                <TextView
                    android:id="@+id/eventWaitlist_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:fontFamily="@font/italiana"
                    android:gravity="center"
                    android:text="Event Waitlist"
                    android:textColor="#F0DAA0"
                    android:textSize="44sp" />

                <TextView
                    android:id="@+id/tv_waitlist_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/italiana"
                    android:text="Waitlist: 0 entrants"
                    android:textColor="#FCD694"
                    android:padding="8dp"
                    android:textSize="16sp"
                    />

                <!-- RecyclerView fills remaining scroll space -->
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recycler_waitlist"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:nestedScrollingEnabled="false"
                    android:clipToPadding="false"
                    android:paddingBottom="16dp" />
            </LinearLayout>
        </ScrollView>

        <!-- Fixed Join/Leave Buttons -->
        <LinearLayout
            android:id="@+id/waitlist_buttons"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="8dp">

            <Button
                android:id="@+id/btn_join_waitlist"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Join Waitlist"
                android:backgroundTint="#ED9029"
                android:textColor="#FFFFFF"
                android:fontFamily="@font/italiana"
                android:layout_marginEnd="8dp"/>

            <Button
                android:id="@+id/btn_leave_waitlist"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Leave Waitlist"
                android:backgroundTint="#F0F0F0"
                android:textColor="#731B3F"
                android:fontFamily="@font/italiana"/>
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>
