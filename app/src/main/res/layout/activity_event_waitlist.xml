<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/guidelines_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#8C154F">

    <include
        android:id="@+id/include_header"
        layout="@layout/top_header" />

    <include
        android:id="@+id/include_bottom_menu"
        layout="@layout/bottom_menu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true" />

    <FrameLayout
        android:id="@+id/event_card"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/include_header"
        android:layout_above="@id/include_bottom_menu"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:paddingTop="20dp"
        android:paddingBottom="32dp"
        android:layout_marginStart="0dp"
        android:layout_marginEnd="0dp"
        android:layout_marginTop="0dp"
        android:layout_marginBottom="-10dp"
        android:background="@drawable/rounded_panel">

        <ScrollView
            android:id="@+id/eventsList_scroll"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingBottom="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center_horizontal">

                <TextView
                    android:id="@+id/eventWaitlist_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:fontFamily="@font/italiana"
                    android:gravity="center"
                    android:text="Event Waitlist"
                    android:textColor="#F0DAA0"
                    android:textSize="44sp" />

                <!-- Row 1: Invited / Accepted / Cancelled -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="3"
                    android:gravity="center"
                    android:layout_marginBottom="12dp">

                    <Button
                        android:id="@+id/view_invited_btn"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="View Invited"
                        android:textColor="#FFFFFF"
                        android:backgroundTint="#ED9029"
                        android:fontFamily="@font/italiana"
                        android:layout_marginEnd="6dp" />

                    <Button
                        android:id="@+id/view_accepted_btn"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="View Accepted"
                        android:textColor="#FFFFFF"
                        android:backgroundTint="#ED9029"
                        android:fontFamily="@font/italiana"
                        android:layout_marginHorizontal="6dp" />

                    <Button
                        android:id="@+id/view_cancelled_btn"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="View Cancelled"
                        android:textColor="#FFFFFF"
                        android:backgroundTint="#ED9029"
                        android:fontFamily="@font/italiana"
                        android:layout_marginStart="6dp" />
                </LinearLayout>


                <!-- Row 2: Random + Notify side-by-side -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:weightSum="2"
                    android:layout_marginBottom="12dp">

                    <Button
                        android:id="@+id/random_sample_btn"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Random Sample"
                        android:textColor="#FFFFFF"
                        android:backgroundTint="#ED9029"
                        android:fontFamily="@font/italiana"
                        android:layout_marginEnd="6dp" />

                    <Button
                        android:id="@+id/notify_all_btn"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Notify All Waitlist"
                        android:textColor="#FFFFFF"
                        android:backgroundTint="#ED9029"
                        android:fontFamily="@font/italiana"
                        android:layout_marginStart="6dp" />

                </LinearLayout>


                <!-- Row 3: Redraw Pending -->
                <Button
                    android:id="@+id/redraw_btn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Redraw Pending"
                    android:textColor="#FFFFFF"
                    android:backgroundTint="#ED9029"
                    android:fontFamily="@font/italiana"
                    android:layout_marginBottom="16dp" />


                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recycler_waitlist"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:clipToPadding="false"
                    android:paddingBottom="16dp" />

            </LinearLayout>
        </ScrollView>
    </FrameLayout>
</RelativeLayout>
