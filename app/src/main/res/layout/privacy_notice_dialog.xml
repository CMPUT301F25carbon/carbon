<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    android:background="@drawable/rounded_yellow_panel"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:padding="24dp">

    <!-- Icon -->
    <ImageView
        android:id="@+id/privacy_icon"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:src="@drawable/ic_person"
        android:layout_marginBottom="12dp"
        android:contentDescription="Privacy Icon" />

    <!-- Title -->
    <TextView
        android:id="@+id/privacy_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Privacy Notice"
        android:textColor="#731B3F"
        android:textSize="20sp"
        android:fontFamily="@font/italiana"
        android:layout_marginBottom="12dp" />

    <!-- Message -->
    <TextView
        android:id="@+id/privacy_message"
        android:layout_width="260dp"
        android:layout_height="wrap_content"
        android:text="This app uses a device-based identifier to create an entrant profile automatically. This identifier links you to event entries and waitlists. No personal information is collected unless you choose to sign up."
        android:gravity="center"
        android:textColor="#731B3F"
        android:textSize="14sp"
        android:fontFamily="@font/italiana"
        android:layout_marginBottom="20dp" />

    <!-- OK Button -->
    <Button
        android:id="@+id/ok_btn"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:text="OK"
        android:textColor="#FFFFFF"
        android:backgroundTint="#ED9029"
        android:fontFamily="@font/italiana"/>
</LinearLayout>
