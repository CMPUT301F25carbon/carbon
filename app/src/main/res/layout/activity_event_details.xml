<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/event_details_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#8C154F">

    <include
        android:id="@+id/include_header"
        layout="@layout/top_header" />

    <include
        android:id="@+id/include_bottom_menu"
        layout="@layout/bottom_menu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true" />

    <LinearLayout
        android:id="@+id/event_details_panel"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/include_header"
        android:layout_above="@id/include_bottom_menu"
        android:padding="16dp"
        android:background="@drawable/rounded_panel">

        <!-- Title + Sign Up -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp">

            <TextView
                android:id="@+id/tv_event_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Urban Gardening 101"
                android:textColor="#FCD694"
                android:textSize="28sp"
                android:fontFamily="@font/italiana" />

            <Button
                android:id="@+id/btn_sign_up"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sign Up"
                android:textColor="#FFFFFF"
                android:backgroundTint="#ED9029"
                android:fontFamily="@font/italiana"
                android:minHeight="0dp"
                android:paddingHorizontal="16dp"
                android:paddingVertical="8dp" />
        </LinearLayout>

        <!-- Meta row -->
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/tv_event_date"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="05/12/2025"
                android:textColor="#FCD694"
                android:fontFamily="@font/italiana"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tv_event_counts"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="end"
                android:textAlignment="viewEnd"
                android:text="11 registrations / 5 spots"
                android:textColor="#FCD694"
                android:fontFamily="@font/italiana"
                android:textSize="14sp" />
        </LinearLayout>


        <!-- Description -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#F0DAA0"
            android:padding="12dp"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="16dp">
            
            <TextView
                android:id="@+id/tv_event_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Event description will appear here"
                android:textColor="#E91E63"
                android:fontFamily="@font/italiana"
                android:textSize="16sp"/>
        </LinearLayout>

        <!-- Countdown Timer -->
        <LinearLayout
            android:id="@+id/countdown_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#F0DAA0"
            android:padding="16dp"
            android:layout_marginTop="16dp"
            android:gravity="center"
            android:layout_marginBottom="8dp">
            
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Time Until Event"
                android:textColor="#731B3F"
                android:fontFamily="@font/italiana"
                android:textSize="14sp"
                android:textStyle="bold"
                android:layout_marginBottom="8dp"/>
            
            <TextView
                android:id="@+id/tv_countdown"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Loading..."
                android:textColor="#731B3F"
                android:fontFamily="@font/italiana"
                android:textSize="20sp"
                android:textStyle="bold"/>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
